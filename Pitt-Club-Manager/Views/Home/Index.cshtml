
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">
    <title>Jumbotron Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <link href="content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="jumbotron.css" rel="stylesheet">
    <style>
        .search-menu {
            position: absolute;
            top: 100%;
            z-index: 1000;
            float: left;
            min-width: 10rem;
            display: block;
            padding: .5rem 0;
            margin: .125rem 0 0;
            font-size: 1rem;
            color: #212529;
            text-align: left;
            list-style: none;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid rgba(0,0,0,.15);
            border-radius: .25rem;
        }
            .search-menu li:hover {
                background-color: rgba(0,0,0,.15);
            }
    </style>
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a href="@Url.Action("Logout", "Login")">Logout</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="navbar-text"  style="padding: .5rem">
                        @HttpContext.Current.User.Identity.Name
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            What are your interests?
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <p class="dropdown-item"><input type="checkbox" id="opt1" value="Sports" onchange="filter(this.id, this.checked)" />&nbsp;&nbsp;&nbsp;&nbsp;Sports</p>
                            <p class="dropdown-item"><input type="checkbox" id="opt2" value="Gaming" onchange="filter(this.id, this.checked)" />&nbsp;&nbsp;&nbsp;&nbsp;Gaming</p>
                            <p class="dropdown-item"><input type="checkbox" id="opt3" value="Academic" onchange="filter(this.id, this.checked)" />&nbsp;&nbsp;&nbsp;&nbsp;Academic</p>
                        </div>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" id="filterText" onkeyup="search()" type="text" placeholder="Search for a club" aria-label="Search">
                    <ul class="search-menu" role="menu" id="search-bar" hidden="hidden">
                        @for (var i = 0; i <= @ViewBag.length - 1; i++)
                        {
                            <li>
                                <div class="chip">
                                    <a href="@Url.Action("id", "Club", new { id = Model[i].GetId() })">@Model[i].GetName()</a>
                                </div>
                            </li>
                        }

                        <hr>
                    </ul>
                </form>
            </div>
        </nav>
        <main role="main">
            <div class="jumbotron">
                <div class="container">
                    <h1 class="display-3">Pick your club!</h1>
                    <p>Welcome to Pitt's club manager.  This is the place to keep track of all of the clubs you are in!  Click a club's check box to join.  Visit the club's homepage to learn more.</p>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-primary pull-right" onclick="location.href='/CreateClub'">Create club</button>
                    </div>
               </div>
            </div>

            <div class="container" id="club-list">
                @for (var i = 0; i <= @ViewBag.length - 1; i++)
                {
                <div class="col-md-4 card" style="float:left; height:350px;">
                    <h2>@Model[i].GetName()</h2>
                    <p style="overflow-y:scroll">@Model[i].GetDescription()</p>
                    <div class="input-group mb-3 font-weight-bold font-italic">
                        <input type="text" class="form-control" placeholder="@Model[i].GetFilter()" disabled>
                    </div>

                    @Html.ActionLink("Club page", "id", "Club", new { id = Model[i].GetId() }, new { @class = "page-scroll" })
                </div>
                }

                <hr>
            </div>
        </main>
    }
    else
    {
        @Html.Action("Index", "Login")
    }

    <footer class="container">
        <p>CS1530 Software Engineering</p>
    </footer>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="Scripts/popper.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script>
        function filter(id, vis) {
            var input, filter, ul, li, a, i;
            input = document.getElementById(id);
            filter = input.value.toUpperCase();
            ul = document.getElementById("club-list");
            li = ul.getElementsByClassName("card");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByClassName("font-weight-bold")[0];
                if(vis){
                    if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        li[i].style.display = "";
                    } else {
                        li[i].style.display = "none";
                    }
                }
                else{
                    li[i].style.display = "";
                }

            }
        }

        function search() {
            var input, filter, ul, li, a, i;
            input = document.getElementById("filterText");
            filter = input.value.toUpperCase();
            ul = document.getElementById("search-bar");
            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByClassName("chip")[0];
                if (filter == ""){
                    ul.setAttribute("hidden", "hidden");
                }
                else if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    ul.removeAttribute("hidden");
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }
    </script>
</body>
</html>
